#!/bin/sh

set -eu

# find out what directory are we running from
cd "$(dirname "$0")"
HERE="$PWD"
ROOT="${ROOT:-$HERE/../..}"

# name for logging purposes
NAME="sleep"

# we don't use it
#PID_FILE="$ROOT/var/run/$name.pid"

# process to monitor
PEXP="/bin/sh $ROOT/bin/sleepd -D"

DAEMON="$ROOT/bin/sleepd"

. "$ROOT/etc/rc.subr"

rc_run "$1"
