#!/bin/sh
# example daemon

cd "$(dirname "$0")" || exit 1

#ps -o ppid= -p $(/bin/sh -c 'ps -p $$ -o ppid=')

trap 'kill -15 $pid' 15

case "x$1" in
x-D)
	#ps -o ppid= -p $(/bin/sh -c 'ps -p $$ -o ppid=')
	sleep 999 &
	pid="$!"
	wait
	;;
*)
	#ps -o ppid= -p $(/bin/sh -c 'ps -p $$ -o ppid=')
	"$PWD/sleepd" -D &
	;;
esac
