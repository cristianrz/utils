#!/bin/sh

set -eu

HERE="$( cd "$(dirname "$0")"; pwd)"

RC="$HERE/../etc/rc.d"

case "$1" in
	start|status|stop|restart) "$RC"/"$2" "$1" ;;
	enable) 
		cd "$RC"
		ln -sv ../init.d/"$2" "$2"
		;;
	disable)
		cd "$RC"
		rm -fv "$RC"/"$2"
		;;
	*)
		echo "Usage: profilectl {start|stop|restart|status}"
		exit 1
		;;
esac


