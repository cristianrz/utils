#!/bin/sh

set -eu

HERE="$(
	cd "$(dirname "$0")"
	pwd
)"

RC="$HERE/../etc/rc.d"
RC_CONF="$HERE/../etc/rc.conf"

case "$#" in
0)
	echo "usage: profilectl {start|status|stop|restart|enable|disable}"
	exit 1
	;;
esac

case "$1" in
start | status | stop | restart) "$RC"/"$2" "$1" ;;
enable)
	awk -F'=' -v service="$2" '
			$1 == service {
				print service "=YES"
				done=1
				next
			}	

			{ print }

			END {
				if (!done) {
					print service "=YES"
				}
			}
			
		' "$RC_CONF" >"$RC_CONF".bak

	mv "$RC_CONF".bak "$RC_CONF"
	;;
disable)
	awk -F'=' -v service="$2" '
			$1 == service {
				print service "=NO"
				done=1
				next
			}	

			{ print }

			END {
				if (!done) {
					print service "=NO"
				}
			}
			
		' "$RC_CONF" >"$RC_CONF".bak

	mv "$RC_CONF".bak "$RC_CONF"
	;;
*)
	echo "Usage: profilectl {start|stop|restart|status|enable|disable}"
	exit 1
	;;
esac
